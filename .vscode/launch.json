{

    "version": "0.2.0",

    "configurations": [

        {

            "justMyCode": false,

            "name": "Run Python file",

            "type": "python",

            "request": "launch",

            "program": "${file}",

            "console": "integratedTerminal",

            "cwd": "${workspaceFolder}",

            "env": {

                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"

            }

        }

    ]

}